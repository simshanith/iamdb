div(ng-include='"components/navbar/navbar.html"')

header#banner.hero-unit
  .container
    h1 I AM DB
    p.lead A multiplayer movie trivia game built with Node, Express, Socket.IO, Passport, and Angular.
    img(src='assets/images/yeoman.png', alt='I\'m Yeoman')
    div
      a(ui-sref='games', class='btn btn-default') Games

.container
  .row
    .col-lg-12
      h1.page-header Active Games:
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='game in games')
        li
          a(href='#', tooltip='{{game.info}}')
            | {{game.name}}
            button.btn.btn-blue(type='button', ng-click='joinGame(game)') Join

  form.thing-form
    label Syncs in realtime across clients
    p.input-group
      input.form-control(type='text', placeholder='Add a new thing here.', ng-model='newGame')
      span.input-group-btn
        button.btn.btn-primary(type='submit', ng-click='addGame()') Add New

